<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_gray_light3">

    <TextView
        android:id="@+id/join_network_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="Join Network"
        android:textColor="@color/ST_BLUE_DARK"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/network_key_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/join_network_tv"
        android:layout_margin="15dp"
        android:background="@color/color_gray_light"
        android:hint="Enter Join Network Key"
        android:padding="5dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/network_key_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:onClick="api_jnc_onclick"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Join"
        android:textColor="@color/ST_BLUE_DARK"
        android:textSize="20dp" />

</RelativeLayout>