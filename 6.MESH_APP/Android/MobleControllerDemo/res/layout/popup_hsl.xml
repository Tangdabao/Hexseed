<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hslLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/hsl_tab_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible"
            android:weightSum="3">

            <Button
                android:id="@+id/hsl_tab_BT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_model_background"
                android:text="HSL" />

            <Button
                android:id="@+id/hsl_hue_BT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_model_background"
                android:text="Hue"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/hsl_saturation_BT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_model_background"
                android:text="Saturation"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hsl_only_saturation_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:text="Saturation"

                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:visibility="visible" />

            <com.st.bluenrgmesh.utils.NegativeSeekBar
                android:id="@+id/hsl_only_saturation_seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:max="20000" />

            <EditText
                android:id="@+id/hsl_only_saturation_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:text="S"
                android:textColor="@color/btnColor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/hsl_only_saturation_ET1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:text="T"
                android:textColor="@color/btnColor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/hsl_only_hue_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:text="Hue"

                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:visibility="visible" />

            <com.st.bluenrgmesh.utils.NegativeSeekBar
                android:id="@+id/hsl_only_hue_seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:max="20000" />

            <EditText
                android:id="@+id/hsl_only_hue_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:text="H"
                android:textColor="@color/btnColor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/hsl_only_hue_ET1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:text="H"
                android:textColor="@color/btnColor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/hsl_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"

                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="Hue"

                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <com.st.bluenrgmesh.utils.NegativeSeekBar
                    android:id="@+id/hsl_seekBar_Hue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:max="32768" />

                <EditText
                    android:id="@+id/hsl_hue_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:text="H"
                    android:textColor="@color/btnColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/hsl_hue_ET1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:imeOptions="actionDone"
                    android:text="8"

                    android:textColor="@color/btnColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="horizontal"

                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="Saturation"

                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <com.st.bluenrgmesh.utils.NegativeSeekBar
                    android:id="@+id/hsl_seekBar_saturation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:max="20000" />

                <EditText
                    android:id="@+id/hsl_saturation_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:text="S"
                    android:textColor="@color/btnColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/hsl_saturation_ET1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:imeOptions="actionDone"
                    android:text="800"
                    android:textColor="@color/btnColor"
                    android:textSize="12sp"

                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"

                android:orientation="horizontal"
                android:paddingBottom="10dp">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="Lightness"

                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <com.st.bluenrgmesh.utils.NegativeSeekBar
                    android:id="@+id/hsl_seekBar_lightness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:max="100" />

                <EditText
                    android:id="@+id/hsl_lightness_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:text="L"
                    android:textColor="@color/btnColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/hsl_lightness_ET1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:text="8"
                    android:textColor="@color/btnColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/hsl_closeBT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#90000000"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="@color/Grey" />

            <Button
                android:id="@+id/hsl_sendcommandBT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_group_setting_background"
                android:text="Send Command"
                android:textAllCaps="false"
                android:textColor="@color/ST_primary_blue" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
